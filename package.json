{
  "name": "paulogoncalves",
  "version": "1.0.0-rc.0",
  "description": "Cartão de apresentação pessoal",
  "author": "Paulo Gonçalves <paulorochag@hotmail.com> (https://www.linkedin.com/in/paulo-goncalves/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PauloGoncalvesBH/card.git"
  },
  "bin": {
    "paulo": "./bin/main.js",
    "paulogoncalves": "./bin/main.js"
  },
  "files": [
    "bin/"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "boxen": "^4.2.0",
    "chalk": "^3.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "standard": "^14.3.1"
  },
  "scripts": {
    "build": "node src/build.js",
    "card": "node ./bin/main.js",
    "dev": "npm run build && npm run card",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "prepublishOnly": "npm run dev",
    "commit": "npx git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
